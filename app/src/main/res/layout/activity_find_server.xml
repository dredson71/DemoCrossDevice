<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FindServerActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Server: "
        android:layout_centerVertical="true"
        android:id="@+id/txtAddress"
        android:textSize="22dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:id="@+id/editTxtIpAddressServer"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/txtAddress"
        android:text="192.168.3.165"
        android:textSize="22dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFindServer"
        android:text="Search"
        android:layout_below="@+id/editTxtIpAddressServer"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>